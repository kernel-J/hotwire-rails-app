<% content_for :title, "Projects" %>

<h1>Projects</h1>

<p><%= link_to "New project", new_project_path, data: { turbo_frame: dom_id(Project.new) }%></p>

<%= turbo_frame_tag Project.new %>

<%= search_form_for @q, data: { "turbo-frame": "projects", "turbo-action": "replace" } do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.submit %>
<% end %>

<turbo-frame id="projects">
  <div class="cards" id="projects">
    <% @projects.each do |project| %>
      <%= render project %>
    <% end %>
  </div>
</turbo-frame>
