<turbo-frame id="edit-project">
  <div id="<%= dom_id(project) %>">
    <div class="card">
      <p>
        <%= link_to project.name, [:edit, project] %>
      </p>

      <p>
        <%= project.active ? "Active" : "Inactive" %> /
        <%= Project::UNIONS[project.union.to_sym] %>
      </p>
      <p>
        <%= link_to "delete", project, data: { turbo_method: :delete } %>
      </p>
    </div>
  </div>
</turbo-frame>
